@model IEnumerable<BuahSayur.ViewModel.PurchasingOrderDetailViewModel>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Item_Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item_Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="purchasing-item-list">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <input type="hidden" name="Item_Stock" value="@item.Item_Stock"/>
                    <input type="text" name="Item_Code" value="@item.Item_Code" class="form-control" disabled />
                    @*@Html.DisplayFor(modelItem => item.Item_Code)*@
                </td>
                <td>
                    <input type="text" name="Item_Name" value="@item.Item_Name" class="form-control" disabled />
                    @*@Html.DisplayFor(modelItem => item.Item_Name)*@
                </td>
                <td>
                    <input type="text" name="Item_Weight" value="@item.Item_Weight" class="form-control" disabled />
                    @*@Html.DisplayFor(modelItem => item.Item_Name)*@
                </td>
                <td class="warning">
                    <input type="text" name="Quantity" onkeyup="QuantityUpdate(this);" value="@item.Quantity" class="form-control" />
                    @*@Html.DisplayFor(modelItem => item.Quantity)*@
                </td>
                <td>
                    <input type="text" name="Price" value="@item.Price" class="form-control" disabled />
                    @*@Html.DisplayFor(modelItem => item.Price)*@
                </td>
                <td>
                    <input type="text" name="Total" value="@item.Total" class="form-control" disabled />
                    @*@Html.DisplayFor(modelItem => item.Total)*@
                </td>
                <td>
                    <button type="button" class="btn btn-danger btn-remove" onclick="RemoveItem(this);"></button>
                </td>
            </tr>
        }
    </tbody>
</table>
