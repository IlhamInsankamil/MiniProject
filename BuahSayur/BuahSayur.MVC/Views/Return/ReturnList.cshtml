@model IEnumerable<BuahSayur.ViewModel.DeliveryOrderDetailViewModel>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Item_Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReturnAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Replacement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
        </tr>
    </thead>
    <tbody id="detail-list">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <input type="text" name="Item_Code" value="@item.Item_Code" class="form-control" disabled />
                    @*@Html.DisplayFor(modelItem => item.Item_Code)*@
                </td>
                <td>
                    <input type="text" name="Item_Name" value="@item.Item_Name" class="form-control" disabled />
                    @*@Html.DisplayFor(modelItem => item.Item_Name)*@
                </td>
                <td>
                    <input type="text" name="Quantity" value="@item.Quantity" class="form-control" disabled />
                    @*@Html.DisplayFor(modelItem => item.Quantity)*@
                </td>
                <td>
                    <input type="text" name="Price" value="@item.Price" class="form-control" disabled />
                    @*@Html.DisplayFor(modelItem => item.Price)*@
                </td>
                <td class="warning">
                    <input type="text" name="ReturnAmount" value="@item.ReturnAmount" class="form-control" />
                    @*@Html.DisplayFor(modelItem => item.ReturnAmount)*@
                </td>
                <td>
                    <input type="text" name="Replacement" value="@item.Replacement" class="form-control" />
                    @*@Html.DisplayFor(modelItem => item.Replacement)*@
                </td>
                <td>
                    <input type="text" name="Total" value="@item.Total" class="form-control" disabled />
                    @*@Html.DisplayFor(modelItem => item.Total)*@
                </td>
            </tr>
        }
    </tbody>
</table>
