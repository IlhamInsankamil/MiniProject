@model IEnumerable<BuahSayur.ViewModel.DeliveryOrderDetailViewModel>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Item_Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item_Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item_Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.TotalWeight)
                </th>*@
        </tr>
    </thead>
    <tbody id="shippinglist">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <input type="text" name="Item_Code" value="@item.Item_Code" class="form-control" disabled />
                    @*@Html.DisplayFor(modelItem => item.Item_Code)*@
                </td>
                <td>
                    <input type="text" name="Item_Name" value="@item.Item_Name" class="form-control" disabled />
                    @*@Html.DisplayFor(modelItem => item.Item_Name)*@
                </td>
                <td>
                    <input type="text" name="Item_Weight" value="@item.Item_Weight" class="form-control" disabled />
                    @*@Html.DisplayFor(modelItem => item.Quantity)*@
                </td>
                <td>
                    <input type="text" name="Item_Size" value="@item.Item_Size" class="form-control" disabled />
                    @*@Html.DisplayFor(modelItem => item.Quantity)*@
                </td>
                <td>
                    <input type="hidden" name="TotalWeight" value="@item.TotalWeight" />
                    <input type="text" name="Quantity" value="@item.Quantity" class="form-control" disabled />
                    @*@Html.DisplayFor(modelItem => item.Quantity)*@
                </td>
                @*<td>
                        <input type="text" name="TotalWeight" value="@item.TotalWeight.ToString("0.00")" class="form-control" disabled />
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>*@
            </tr>
        }
    </tbody>
</table>
